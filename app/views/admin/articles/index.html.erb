<h2 class="clearfix">記事一覧
  <span class="right"><%= link_to "新規登録", new_admin_article_path, class: "btn btn-default" %></span>
</h2>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= link_to '詳細', [:admin, article], class: "btn btn-default" %></td>
        <td><%= link_to '編集', edit_admin_article_path(article), class: "btn btn-default" %></td>
        <td><%= link_to '削除', [:admin, article], method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
